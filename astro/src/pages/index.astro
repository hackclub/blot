          }
        </div>
        <div>
          {
            curated.slice((curated.length / 3) * 2).map((workshop, idx) => (
              <div class="workshop">
                <img class="thumbnail" src={workshop.frontmatter.thumbnail} />
                <div class="prose">
                  <h2>{workshop.frontmatter.title}</h2>
